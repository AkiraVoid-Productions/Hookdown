{
  "name": "hookdown",
  "description": "A web Markdown editor with web hooks enabled.",
  "keywords": [
    "markdown",
    "markdown-editor",
    "webhook",
    "remarkjs",
    "unfiedjs"
  ],
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/AkiraVoid-Productions/Hookdown",
    "type": "git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*": [
      "cspell --no-must-find-files",
      "yarn prettier --ignore-unknown --write"
    ],
    ".{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@fluentui/react-components": "^9.18.2",
    "@fluentui/react-icons": "^2.0.197",
    "@fluentui/react-utilities": "^9.7.2",
    "@monaco-editor/react": "^4.4.6",
    "highlight.js": "^11.7.0",
    "i18next": "^22.4.12",
    "monaco-themes": "^0.4.4",
    "next": "13.2.4",
    "next-i18next": "^13.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "^12.2.0",
    "rehype": "^12.0.1",
    "rehype-external-links": "^2.0.1",
    "rehype-highlight": "^6.0.0",
    "rehype-katex": "^6.0.2",
    "rehype-react": "^7.1.2",
    "rehype-sanitize": "^5.0.1",
    "rehype-slug": "^5.1.0",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "scheduler": "^0.19.0 || ^0.20.0",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "18.15.3",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cspell": "^6.30.2",
    "envinfo": "^7.8.1",
    "eslint": "8.36.0",
    "eslint-config-next": "13.2.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "monaco-editor": "^0.36.1",
    "prettier": "^2.8.4",
    "prettier-plugin-jsdoc": "^0.4.2",
    "semantic-release": "^21.0.0",
    "typescript": "5.0.2"
  }
}
